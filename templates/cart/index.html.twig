{% extends 'base_front.html.twig' %}
{% block title %}Panier
{% endblock %}

{% block body %}

        <h1>Votre panier</h1>

{% if items | length > 0 %}
    <table class="table">

        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
        <tr>
            <td>{{ item.produit.nom }}</td>
            <td>{{ item.produit.prix}}</td>
            <td>{{ item.quantity}}</td>
            <td>{{ item.produit.prix * item.quantity }}</td>
            <td>
               <a href="{{ path('cart_remove',{'id':item.produit.id})}}" class="btn btn-danger"></a>
                <i class="fas fa-trash"></i>
            </td>
        </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
        <td colspan="3" class="text-right">Total :</td>
        <td>{{ total }}</td>
        <td> <a href="{{ path('checkout') }}" class="btn-success">Acheter</a></td>
        </tr>
        </tfoot>
    </table>
    {% else %}
    <p>Surprise, c'est vide !</p>
    {% endif %}
{% endblock %}
