{% extends 'base_back.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumCom</th>
                <th>Date</th>

                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numCom }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>

                <td>{{ commande.total }}</td>




                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}" class="btn-success">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}"class="btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}"class="btn-success">Create new</a>
{% endblock %}
