{% extends 'base_back.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>NumCom</th>
                <td>{{ commande.numCom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
            </tr>


            <tr>
                <th>Total</th>
                <td>{{ commande.total }}</td>
            </tr>

            <tr>
                <th>Nom de client</th>
                <td>{{ commande.client.Nom }}</td>
            </tr>
            <tr>
                <th>Nom de produit</th>
                <td>{{ commande.produit.nom }}</td>
            </tr>


        </tbody>
    </table>

