       <button><a  href="{{ path('trie') }}"> TRIE BY Nom <i class="fa fa-align-justify"></i></a></button>

    <table border="1" id="entitiesNavv"  width="100%">
        <tr>
            <th>adresse</th>
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>nom</th>
            <th>prenom</th>
